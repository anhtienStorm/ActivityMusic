<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notify_img_song"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:src="@drawable/icon_default_song" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notify_song_name"
            android:layout_width="match_parent"
            android:paddingLeft="4dp"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/notify_artist"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="Artist"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="17dp"
            android:textSize="16sp"
            android:text="Activity Music"
            android:layout_height="20dp"
            android:paddingLeft="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/notify_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/ic_skip_previous_black_24dp"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@+id/notify_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_pause_circle_filled_orange_24dp"
                android:layout_toLeftOf="@+id/notify_next"
                android:layout_toRightOf="@+id/notify_previous"/>

            <ImageView
                android:id="@+id/notify_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>